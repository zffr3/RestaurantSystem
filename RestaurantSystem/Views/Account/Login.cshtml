@using RestaurantSystem.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p><h4>Login</h4></p>
    </div>
    @if(TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danged">
            <span>@TempData["Error"]</span>
        </div>
    }
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserMail" class="control-label"></label>
                    <input asp-for="UserMail" class="control-label" />
                    <span asp-validation-for="UserMail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="control-label" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <input class="btn btn-outline-success float right" type="submit" value="Log in"/>
                </div>
            </form>
        </div>
    </div>
</div>